<div class="flex {{ ranking_class }}">
  <h1>
    {{#if show_ranking}}
      {{user.points}}
    {{else}}
      ?
    {{/if}}
  </h1>

  <div class="flex flex-column">
    <h3>
      {{user.user_codename}}
    </h3>

    {{#if show_real_name}}
      <h6>
        {{user.user_realname}}
      </h6>
    {{/if}}
  </div>

  <img class="ml-2" style="width: 50px; height: 50px;" src="{{ user.avatar_url }}" alt="Avatar for the user!">
</div>