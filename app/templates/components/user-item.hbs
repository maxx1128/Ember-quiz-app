<div class="flex {{ ranking_class }}">
  <h1>
    {{#if show_points}}
      {{user.points}}
    {{else}}
      ?
    {{/if}}
  </h1>

  <img style="width: 50px; height: 50px;" src="{{ user.avatar_url }}" alt="User avatar">

  <div>

    {{#if show_names}}
      <h3>
        {{user.user_realname}}
      </h3>

      <h6>
        {{user.user_codename}}
      </h6>
    {{else}}
      <h3>
        {{user.user_codename}}
      </h3>
    {{/if}}
  </div>
</div>
