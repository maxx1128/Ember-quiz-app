<div class="inline-flex content-center rounded-full shadow p-3 mb-4 {{ ranking_class }}">
  <div class="flex items-center justify-center p-4 rounded-full bg-white w-16 h-16 text-4xl font-bold">
    {{#if show_points}}
      {{user.points}}
    {{else}}
      ?
    {{/if}}
  </div>

  <img class="w-16 h-16 ml-4 mr-2" src="{{ user.avatar_url }}" alt="User avatar">

  <div class="flex flex-col justify-center pr-2">
    {{#if show_names}}
      <h3>
        {{user.user_realname}}
      </h3>

      <h6>
        {{user.user_codename}}
      </h6>
    {{else}}
      <h3>
        {{user.user_codename}}
      </h3>
    {{/if}}
  </div>
</div>
