<div class="text-center">
  <h1 class="mb-6">
    Join the Quiz!
  </h1>

  {{#unless user_info_submitted}}
    <div class="block mb-4">
      {{ input value=real_name class="border rounded p-2" placeholder="Real Name" }}
    </div>

    <div class="block mb-8">
      {{ input value=code_name class="border rounded p-2" placeholder="Code Name" }}
    </div>

    <div>
      {{tw-button
          text="Make a random code name!"
          action_1=(action 'random_code_name')}}

      <br><br>

      {{#unless invalid_user_data}}
        {{tw-button
            text="Submit Your Entry"
            action_1=(action 'update_user_info')}}
      {{/unless}}
    </div>
  {{else}}
    <div class="text-xl mb-2">
      Real name: <strong>{{ user.real_name }}</strong>
    </div>
    <div class="text-xl mb-2">
      Code name: <strong>{{ user.code_name }}</strong>
    </div>

    <img class="w-4/5 md:w-2/5 mb-4" src="{{user.avatar_url}}" alt="User avatar">

    <p class="mb-4">
      You're ready to play!
    </p>

    {{tw-button
          text="Go to the Quiz!"
          link_to='user.answering'}}
  {{/unless}}
</div>
